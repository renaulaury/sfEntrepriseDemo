{% extends 'base.html.twig' %}

{% block title %}Hello EntrepriseController!{% endblock %}

{% block body %}
    <h1>Liste des entreprises</h1>
    
   <a href=" {{ path('new_entreprise')}}" class="btn btn-success">Ajouter une entreprise</a>

        {% for entreprise in entreprises %}
            {# <p>{{ entreprise.raisonSociale ~ '(' ~ entreprise.cp ~ ' ' ~ entreprise.ville ~ ')' }}</p> #}
            <p>
                <a href=" {{ path('show_entreprise', {'id': entreprise.id} )}}">{{ entreprise }}</a>
                <a class="btn btn-warning" href="{{ path('edit_entreprise', {'id' : entreprise.id}) }}">Edit</a>
                <a class="btn btn-warning" href="{{ path('delete_entreprise', {'id' : entreprise.id}) }}">Supprimer</a>
            </p>
        
            {% endfor %}
    



{% endblock %}
